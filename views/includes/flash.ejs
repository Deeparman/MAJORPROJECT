<style>
    .flash{
        padding: 10px; 
        margin: 0 auto; 
        border-radius: 5px; 
        height: auto; 
        width: 50%; 
    }
    .flash button{
        height: auto; 
    }
</style>
<%if(success && success.length) {%>
    <div class="alert alert-success alert-dismissible fade show col-6 offset-3 mt-2 flash" role="alert">
        <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<%} %>


<%if(error && error.length) {%>
    <div class="alert alert-danger alert-dismissible fade show col-6 offset-3 mt-2 flash" role="alert">
        <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<%} %>

