<% layout("/layouts/boilerplate") %>

<div class="container mt-4">
  <h2>Your Bookings</h2>
  <% if (bookings.length === 0) { %>
    <p>No bookings yet.</p>
  <% } else { %>
    <div class="row">
      <% bookings.forEach(booking => { %>
        <div class="col-md-4">
          <div class="card mb-3 shadow">
            <img src="<%= booking.listing.image.url %>" class="card-img-top" alt="Listing image">
            <div class="card-body">

              <h5 class="card-title"><%= booking.listing.title %></h5>
              <p class="card-text">
                Check-in:  <%= booking.checkIn ? new Date(booking.checkIn).toDateString() : "N/A" %> 
              </p>
              <p class="card-text">
                Check-out: <%= booking.checkOut ? new Date(booking.checkOut).toDateString() : "N/A" %> 
              </p>
              <a href="/listings/<%= booking.listing._id %>" class="btn btn-view-book" >View Listing</a>

              <form action="/bookings/<%= booking._id %>?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-danger">Cancel Booking</button>
              </form>

            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>
