<% layout("/layouts/boilerplate") %>

<div class="container mt-4">
    <h2 class="mb-4">Your Favorite Listings</h2>

    <% if (favorites.length === 0) { %>
        <p>You haven't added any favorites yet.</p>
    <% } else { %>

        <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 mt-3">
            <% for(let l of favorites){ %>

                <a href="/listings/<%= l._id %>" class="listing-link">
                    <div class="card col listing-card">
                        <img src="<%=l.image.url%>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                        <div class="card-img-overlay"></div>
    
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= l.title %>
                                </b> <br>
                                &#8377; <%= l.price.toLocaleString("en-IN") %>/night
                                <i class="tax-info"> &nbsp; &nbsp; +18%GST </i>
                            </p>
                        </div>
                    </div>
                </a>
                <% }%>
        </div>
    <% } %>
</div>
